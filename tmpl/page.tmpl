  <title>{{.Title}} - Homin.dev </title>
  <meta name="author" content="Homin Lee">
  <meta name="description" content="Homin.dev web sites">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://homin.dev/asset/css/tachyons.min.css">
  <meta name="color-scheme" content="light dark">
  <style>
    :root {
      --clover-green: #5BE584;
      --clover-dark: #2E7D32;
    }

    @media (prefers-color-scheme: dark) {
      .text-dark-aware {
        color: #f5f5f5 !important;
      }
      .bg-dark-aware {
        background-color: #121212 !important;
      }
      .bg-light-gray {
        background-color: #333 !important;
        color: #f5f5f5;
      }
      .text-clover {
        color: var(--clover-green) !important;
      }
      .text-muted {
        color: #bbb !important;
      }
    }

    @media (prefers-color-scheme: light) {
      .text-dark-aware {
        color: #000 !important;
      }
      .bg-dark-aware {
        background-color: #fff !important;
      }
      .text-clover {
        color: var(--clover-dark) !important;
      }
      .text-muted {
        color: #555 !important;
      }
    }
  </style>
</head>
<body class="tc bg-dark-aware text-dark-aware">
  <h1 class="f1 lh-title">{{.Title}}</h1>
  <img src="{{.Img}}">

  <p class="f3 fw3 pa3">{{.Msg}}</p>

  <div class="flex flex-wrap justify-center pr4 pl4 pb4 items-start lh-copy">
    {{range .Links}}
    {{if not .Hide}}
    <div class="bg-light-gray w5 mw5 tl ma2 pa2 shadow-3">
      <p class="f3 b pa0 ma0">
        <a href="{{.Link}}" class="link underline-hover text-clover hover-orange">{{.Name}}</a>
      </p>
      <p class="f6 pa0 ma0 text-muted">{{.Desc}}</p>
    </div>
    {{end}}
    {{end}}
  </div>

